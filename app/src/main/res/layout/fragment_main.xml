                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="This is a testing text, more content will go here"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
