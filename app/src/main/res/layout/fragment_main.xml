<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quankm.healthdiary.FragmentMain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/padding_main_panel_horizontal"
        android:paddingEnd="@dimen/padding_main_panel_horizontal"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="@dimen/windowElevation"
            android:background="@drawable/background_rect_rounded"
            android:layout_marginBottom="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/background_rect_half_rounded_accent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/main_panel_title_bp"
                    android:textColor="@color/windowBackground"
                    android:textAllCaps="true"
                    android:layout_weight="7"
                    android:drawableStart="@drawable/ic_heart_pulse_white_24dp"
                    android:drawablePadding="8dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_down_drop_circle_white_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/btnExpandCollapse"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_panel"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="This is a testing text, more content will go here"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="This is a testing text, more content will go here"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="This is a testing text, more content will go here"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="This is a testing text, more content will go here"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="This is a testing text, more content will go here"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="@dimen/windowElevation"
            android:background="@drawable/background_rect_rounded">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/background_rect_half_rounded_accent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/main_panel_title_bp"
                    android:textColor="@color/windowBackground"
                    android:textAllCaps="true"
                    android:layout_weight="7"
                    android:drawableStart="@drawable/ic_heart_pulse_white_24dp"
                    android:drawablePadding="8dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_down_drop_circle_white_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_panel_1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
